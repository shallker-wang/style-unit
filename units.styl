.left
  float left

.right
  float right

.half
  float left
  width 50%

.line, .bottom-line
  border-bottom 1px solid #000

.line.gray, .border-bottom.gray
  border-color gray

.foo, .bar
  margin auto

.d
  display block

.s
  display inline

.bold
  font-weight bold

.normal
  font-weight normal

.none, .hidden
  display none

.transparent
  opacity 0

